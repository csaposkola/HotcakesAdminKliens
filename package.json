{
  "name": "hcadmin",
  "version": "1.0.1",
  "description": "HotCakes kurzus- és tanfolyamkezelő",
  "main": "main.js",
  "scripts": {
    "start": "node server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "electron": "electron .",
    "build": "electron-builder",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.9.0",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "node-fetch": "^2.7.0",
    "puppeteer": "^24.7.2"
  },
  "devDependencies": {
    "electron": "^36.0.1",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.yourcompany.hotcakes-admin",
    "productName": "HotCakes Admin",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!**/*.{iml,hprof,orig,pyc,pyo,rbc}",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,__pycache__,thumbs.db,.gitignore,.gitattributes}"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "public/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/icon.png"
    },
    "scripts": {
      "version": "git add -A",
      "postversion": "git push && git push --tags"
    }
  }
}
